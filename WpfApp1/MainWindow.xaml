<Window x:Class="UserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserApp"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="User App" Height="240" Width="240">
    <StackPanel Margin="20">
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12" Margin="20" FontSize="20" Command="{Binding DoJobCommand}">Click me</Button>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12" FontSize="20" Text="{Binding JobReport}" />
    </StackPanel>
</Window>
